{
  "name": "webcrack",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "vitest --no-isolate",
    "test:coverage": "vitest run --coverage --no-isolate",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@vitest/coverage-istanbul": "^2.0.2",
    "@vitest/coverage-v8": "^2.0.2",
    "@webcrack/eslint-config": "workspace:*",
    "eslint": "^9.4.0",
    "prettier": "^3.3.1",
    "turbo": "^2.0.1",
    "vitest": "^2.0.2"
  },
  "packageManager": "pnpm@9.2.0",
  "pnpm": {
    "patchedDependencies": {
      "vite-plugin-monaco-editor@1.1.0": "patches/vite-plugin-monaco-editor@1.1.0.patch"
    }
  }
}
